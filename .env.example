# ContentForge AI - Environment Variables

# ===========================================
# LLM API Keys
# ===========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Database
# ===========================================
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/contentforge
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Authentication
# ===========================================
JWT_SECRET_KEY=your_super_secret_key_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Application
# ===========================================
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# ===========================================
# MCP Servers
# ===========================================
MCP_FETCH_SERVER=npx -y @anthropic/mcp-fetch
MCP_MEMORY_SERVER=npx -y @anthropic/mcp-memory

# ===========================================
# External Services (Optional)
# ===========================================
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_KEY=xxx

# ===========================================
# Content Generation
# ===========================================
DEFAULT_LLM_MODEL=claude-sonnet-4-20250514
MAX_TOKENS_PER_REQUEST=4096
CONTENT_GENERATION_TIMEOUT=300
